<script>
    import ScrollReveal from "scrollreveal";

    const tab = document.getElementById("Tab");
    const TabView = document.querySelectorAll('.portfolio-grid');

    let isTransitioning = false;
    let currentTab = 0;

    if (tab && TabView) {
        const indicator = tab.querySelector(":scope > div") as HTMLElement;
        const buttons = tab.querySelectorAll("button");

        buttons.forEach((button, index) => {
            button.addEventListener("click", () => {
                if (isTransitioning || index === currentTab) return;
                moveIndicator(index, button);
            });
        });

        function moveIndicator(index: number, activeButton: HTMLElement) {
            if (!indicator || isTransitioning) return;
            
            isTransitioning = true;

            // Calculate percentage based on number of tabs
            const percentage = (index * 100) / buttons.length;
            indicator.style.left = `${percentage}%`;
            indicator.style.width = `${100 / buttons.length}%`;

            // Update button styles immediately
            buttons.forEach((btn) => {
                const isActive = btn === activeButton;
                btn.classList.toggle("text-white", isActive);
                btn.classList.toggle("text-gray-600", !isActive);
            });
            
            // Hide all tabs first
            TabView.forEach((view, i) => {
                if (i !== index) {
                    view.style.opacity = '0';
                    view.style.transform = 'translateY(10px)';
                }
            });

            // Show active tab after a brief delay
            setTimeout(() => {
                TabView.forEach((view, i) => {
                    if (i === index) {
                        // Show active tab
                        view.classList.remove("hidden");
                        view.classList.add("flex");
                        view.style.opacity = '1';
                        view.style.transform = 'translateY(0)';
                        
                        // Reset and animate items
                        const items = view.querySelectorAll('.portfolio-item');
                        items.forEach(item => {
                            (item as HTMLElement).style.opacity = '0';
                            (item as HTMLElement).style.transform = 'translateY(20px)';
                        });
                        
                        setTimeout(() => {
                            items.forEach((item, itemIndex) => {
                                setTimeout(() => {
                                    (item as HTMLElement).style.opacity = '1';
                                    (item as HTMLElement).style.transform = 'translateY(0)';
                                }, itemIndex * 50);
                            });
                        }, 100);
                        
                    } else {
                        // Hide inactive tabs
                        setTimeout(() => {
                            view.classList.add("hidden");
                            view.classList.remove("flex");
                        }, 150);
                    }
                });
                
                currentTab = index;
                setTimeout(() => {
                    isTransitioning = false;
                }, 300);
            }, 100);
        }
    }
    
    // Initialize first tab properly
    document.addEventListener('DOMContentLoaded', () => {
        // Ensure first tab is visible
        if (TabView[0]) {
            TabView[0].classList.remove("hidden");
            TabView[0].classList.add("flex");
            TabView[0].style.opacity = '1';
            TabView[0].style.transform = 'translateY(0)';
        }
        
        // Hide other tabs
        for (let i = 1; i < TabView.length; i++) {
            if (TabView[i]) {
                TabView[i].classList.add("hidden");
                TabView[i].classList.remove("flex");
                TabView[i].style.opacity = '0';
            }
        }
        
        // Simple ScrollReveal animations
        ScrollReveal().reveal('.portfolio-title', { 
            distance: "30px",
            origin: "bottom",
            opacity: 0,
            duration: 600,
            delay: 100
        });
        
        ScrollReveal().reveal('.portfolio-subtitle', { 
            distance: "30px",
            origin: "bottom",
            opacity: 0,
            duration: 600,
            delay: 200
        });
        
        ScrollReveal().reveal('.portfolio-tabs', { 
            distance: "30px",
            origin: "bottom",
            opacity: 0,
            duration: 600,
            delay: 300
        });
        
