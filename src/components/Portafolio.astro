---
import { IoArrowForwardOutline } from "react-icons/io5";
---

<div class="w-full flex flex-col items-center justify-center p-20 bg-white">
    <div class="flex flex-col items-center justify-center gap-16 mb-12">
        <h1 class="text-6xl font-medium">Portafolio</h1>
        <p class="text-lg font-normal text-center">
            Una muestra de los dispositivos, aplicaciones <br />y sitios web que
            hemos creado
        </p>
    </div>
    <div class="flex py-1 px-1 items-center rounded-md justify-center border border-gray-300/40 mb-16">
        <div class="flex w-[400px] h-[40px] rounded-md relative" id="selector">
            <div
                id="indicator"
                class="absolute top-[0%] h-[100%] bg-[#121212] rounded-md w-1/3 transition-all duration-300 left-0 z-0"
            >
            </div>
            <button
                class="w-1/3 relative z-10 transition-colors text-white cursor-pointer"
                onclick="moveIndicator(0, this)"
            >
                <span>Dispositivos</span>
            </button>
            <button
                class="w-1/3 relative z-10 transition-colors text-black cursor-pointer"
                onclick="moveIndicator(1, this)"
            >
                <span>Aplicaciones</span>
            </button>
            <button
                class="w-1/3 relative z-10 transition-colors text-black cursor-pointer"
                onclick="moveIndicator(2, this)"
            >
                <span>Sitios Web</span>
            </button>
        </div>
    </div>
    <div class="flex w-[82%] flex-col items-center justify-center gap-8">
        <div class="w-full h-auto flex gap-8 justify-between md:flex-row flex-col">
            <a
                class="w-1/2 group h-[460px] bg-gray-100/60 shadow-sm rounded-3xl p-4 cursor-pointer flex items-center flex-col"
            >
                <img
                    src=""
                    class="border border-black h-auto rounded-md"
                    style="width: calc(max((min(100vw, 1200px) - 72px) / 2, 50px) - 32px); height: calc(max((min(100vh, 1200px) - 72px) / 2, 50px) - 72px);"
                />
                <div
                    class="flex items-center w-full justify-start gap-5 h-auto mt-8"
                >
                    <span class="text-2xl font-medium poppins-regular"
                        >Dispositivos Electr√≥nicos</span
                    >
                    <IoArrowForwardOutline
                        client:idle
                        size={25}
                        className=" -rotate-45 opacity-0 group-hover:opacity-100 group-hover:rotate-0 transition-all duration-1000"
                    />
                </div>
               
            </a>

        </div>
    </div>
</div>

<script is:inline>
    function moveIndicator(index, el) {
        const indicator = document.getElementById("indicator");
        indicator.style.left = `${index * 33.3333}%`;

        // Reset all buttons
        document.querySelectorAll("#selector button").forEach((btn) => {
            btn.classList.remove("text-white");
            btn.classList.add("text-black", "bg-transparent");
        });

        // Highlight clicked button
        el.classList.remove("text-black", "bg-transparent");
        el.classList.add("text-white");
    }
</script>
