                                            <div class="w-7 h-7 rounded-full bg-transparent flex items-center justify-center text-gray-500 hover:text-indigo-600 hover:border-indigo-100 transition-colors">
                                                {Icon ? <Icon class="w-6 h-6" /> : (
                                                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d={getTechIcon(tech)}/>
                                                </svg>
                                                )}
                                            </div>
                                            <span class="absolute bottom-full left-1/2 -translate-x-1/2 mb-1.5 px-2 py-1 text-[10px] font-medium text-white bg-gray-900 rounded opacity-0 group-hover/tech:opacity-100 transition-opacity whitespace-nowrap pointer-events-none z-20">
                                                {tech}
                                            </span>
                                        </div>
                                    )})}
                                </div>
                            )}
                            
                            <div class="mt-auto pt-3 border-t border-gray-50 flex items-center justify-between">
                                {item.type === 'device' && item.kickstarterUrl ? (
                                    <a 
                                        href={item.kickstarterUrl} 
                                        target="_blank" 
                                        rel="noopener noreferrer"
                                        class="inline-flex items-center gap-1.5 text-green-600 hover:text-green-700 text-xs font-bold transition-colors"
                                    >
                                        <span class="w-1.5 h-1.5 rounded-full bg-green-500 animate-pulse"></span>
                                        Kickstarter
                                    </a>
                                ) : (
                                    <span class="flex items-center gap-1.5 text-[10px] font-medium text-gray-400">
                                        <span class={`w-1.5 h-1.5 rounded-full bg-${getStatusColor(item.status)}-500`}></span>
                                        {item.statusText || 'Ver detalles'}
                                    </span>
                                )}
                                
                                {(item.url || item.kickstarterUrl) && (
                                    <a 
                                        href={item.url || item.kickstarterUrl} 
                                        target="_blank" 
                                        rel="noopener noreferrer"
                                        class="text-gray-400 hover:text-indigo-600 transition-colors"
                                    >
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                                        </svg>
                                    </a>
                                )}
                            </div>
                        </div>
                    </div>
                )}
            ))}
        </div>
    ))}
</div>

<script>
    import ScrollReveal from "scrollreveal";

    const tab = document.getElementById("Tab");
    const TabView = document.querySelectorAll('.portfolio-grid');

    let isTransitioning = false;
    let currentTab = 0;

    if (tab && TabView) {
        const indicator = tab.querySelector(":scope > div") as HTMLElement;
        const buttons = tab.querySelectorAll("button");

        buttons.forEach((button, index) => {
            button.addEventListener("click", () => {
                if (isTransitioning || index === currentTab) return;
                moveIndicator(index, button);
            });
        });

        function moveIndicator(index: number, activeButton: HTMLElement) {
            if (!indicator || isTransitioning) return;
            
            isTransitioning = true;

            // Calculate percentage based on number of tabs
            const percentage = (index * 100) / buttons.length;
            indicator.style.left = `${percentage}%`;
            indicator.style.width = `${100 / buttons.length}%`;

            // Update button styles
            buttons.forEach((btn) => {
                const isActive = btn === activeButton;
                btn.classList.toggle("text-white", isActive);
                btn.classList.toggle("font-semibold", isActive);
                btn.classList.toggle("text-gray-500", !isActive);
                btn.classList.toggle("hover:text-gray-900", !isActive);
                btn.classList.toggle("font-medium", !isActive);
            });
            
            // Hide all tabs
            TabView.forEach((view, i) => {
                if (i !== index) {
                    view.classList.add('opacity-0', 'translate-y-8');
                    setTimeout(() => {
                        view.classList.add('hidden');
                        view.classList.remove('flex');
                    }, 300);
                }
            });

            // Show active tab
            setTimeout(() => {
                TabView.forEach((view, i) => {
                    if (i === index) {
                        view.classList.remove('hidden');
                        view.classList.add('flex');
                        // Trigger reflow
                        void (view as HTMLElement).offsetWidth;
                        view.classList.remove('opacity-0', 'translate-y-8');
                    }
                });
                
                currentTab = index;
                isTransitioning = false;
            }, 300);
        }
    }
    
    // Initialize
    document.addEventListener('DOMContentLoaded', () => {
        // ScrollReveal
        ScrollReveal().reveal('.portfolio-title', { 
            distance: "20px", origin: "bottom", opacity: 0, duration: 800, delay: 100 
        });
        ScrollReveal().reveal('.portfolio-subtitle', { 
            distance: "20px", origin: "bottom", opacity: 0, duration: 800, delay: 200 
        });
        ScrollReveal().reveal('.portfolio-tabs', { 
            distance: "20px", origin: "bottom", opacity: 0, duration: 800, delay: 300 
        });
        ScrollReveal().reveal('.portfolio-item', { 
            distance: "30px", origin: "bottom", opacity: 0, duration: 800, interval: 100, delay: 400 
        });
    });
</script>

