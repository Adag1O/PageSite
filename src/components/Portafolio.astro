    {Object.entries(portfolioData).map(([tabName, items], tabIndex) => (
        <div 
            id={tabName.replace(/\s+/g, '').replace(/í/g, 'i')} 
            class={`portfolio-grid ${tabIndex === 0 ? 'flex' : 'hidden'} flex-wrap gap-6 w-full max-w-6xl justify-center transition-all duration-500 ${tabIndex === 0 ? 'opacity-100 translate-y-0' : 'opacity-0 translate-y-8'}`}
