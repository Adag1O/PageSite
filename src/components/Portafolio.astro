<script>
    import ScrollReveal from "scrollreveal";

    const tab = document.getElementById("Tab");
    const TabView = [
        document.getElementById("Dispositivos") as HTMLElement,
        document.getElementById("Aplicaciones") as HTMLElement,
        document.getElementById("PaginasWeb") as HTMLElement,
    ];

    if (tab && TabView) {
        const indicator = tab.querySelector(":scope > div") as HTMLElement;
        const buttons = tab.querySelectorAll("button");

        buttons.forEach((button, index) => {
            button.addEventListener("click", () =>
                moveIndicator(index, button),
            );
        });

        function moveIndicator(index: number, activeButton: HTMLElement) {
            if (!indicator) return;

            // Move indicator with smooth animation
            indicator.style.left = `${index * 33.3333}%`;

            // Update button styles with minimalistic transitions
            buttons.forEach((btn) => {
                const isActive = btn === activeButton;
                btn.classList.toggle("text-white", isActive);
                btn.classList.toggle("text-gray-600", !isActive);
            });
            
            // Simple tab content transitions
            TabView.forEach((view, i) => {
                if (i === index) {
                    // Show active tab
                    view.classList.remove("hidden");
                    view.classList.add("flex");
                    
                    setTimeout(() => {
                        view.classList.add("opacity-100");
                        view.classList.remove("opacity-0");
                        
                        // Animate items when tab becomes visible
                        const items = view.querySelectorAll('.portfolio-item');
                        ScrollReveal().reveal(items, { 
                            distance: "20px",
                            origin: "bottom",
                            opacity: 0,
                            duration: 500,
                            interval: 100,
                            reset: false
                        });
                    }, 50);
                } else {
                    // Hide inactive tabs
                    view.classList.add("opacity-0");
                    view.classList.remove("opacity-100");
                    
                    setTimeout(() => {
                        view.classList.add("hidden");
                        view.classList.remove("flex");
                    }, 200);
                }
            });
        }
    }
    
    // Simple ScrollReveal animations
    ScrollReveal().reveal('.portfolio-title', { 
        distance: "30px",
        origin: "bottom",
        opacity: 0,
        duration: 600,
        delay: 100
    });
    
    ScrollReveal().reveal('.portfolio-subtitle', { 
        distance: "30px",
        origin: "bottom",
        opacity: 0,
        duration: 600,
        delay: 200
    });
    
    ScrollReveal().reveal('.portfolio-tabs', { 
        distance: "30px",
        origin: "bottom",
        opacity: 0,
        duration: 600,
        delay: 300
    });
    
    // Animate initial portfolio items
    const initialItems = document.querySelectorAll('#Dispositivos .portfolio-item');
    ScrollReveal().reveal(initialItems, { 
        distance: "20px",
        origin: "bottom",
        opacity: 0,
        duration: 500,
        interval: 100
    });
</script>

