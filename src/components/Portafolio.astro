// Función para obtener el color de estado
function getStatusColor(status: string): string {
  const colors = {
    'live': 'green',
    'demo': 'blue',
    'private': 'gray',
    'development': 'blue',
    'coming-soon': 'gray'
  };
  return colors[status] || 'gray';
}

// Función para obtener el color de categoría
function getCategoryColor(category: string): string {
