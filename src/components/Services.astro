---
import scrollReveal from "scrollreveal";
---

<div class=" flex w-[70%] h-[600px] gap-6 my-20">
    <!-- Columna 1 -->
    <div class="flex flex-col gap-6 w-1/3">
      <div class="services h-[100%] bg-gray-200 rounded-2xl flex-1"></div>
    </div>
  
    <!-- Columna 2 -->
    <div class="flex flex-col gap-6 w-1/3">
     <div class="services h-[30%] bg-green-100 rounded-2xl flex-[3]"></div>
      <div class="services h-[70%] bg-rose-100 rounded-2xl flex-[7]"></div>
    </div>
  
    <!-- Columna 3 -->
    <div class="flex flex-col gap-6 w-1/3">
      <div class="services h-[70%] bg-amber-100 rounded-2xl flex-[7]">1</div>
      <div class="services h-[30%] bg-sky-100 rounded-2xl flex-[3]">2</div>
    </div>
  </div>
  

  <script>
    import ScrollReveal from "scrollreveal";
  
    const slideUp = {
      distance: '50px',
      origin: 'bottom',
      opacity: 0,
      duration: 600,
      easing: 'ease-in-out',
      interval: 300
    };
  
    ScrollReveal().reveal('.services', slideUp);
  </script>
  