---
const { style } = Astro.props;
---

<canvas id="idParticles" class={style}></canvas>

<script >
  // @ts-ignore
  import Particles from "particlesjs" ;

  window.onload = () => {
    Particles.init({
      selector: '#idParticles',
      maxParticles: 100,
      speed: .6,
      color: "#ffffff",
      minDistance: 70,
      connectParticles: true
    });
  };
</script>

