<nav
  id="navbar"
  class="sticky top-5 z-[20] my-5 flex items-center h-[60px] sm:h-[70px] justify-between rounded-md transition-all duration-700 ease-[cubic-bezier(0.4,0,0.2,1)] mx-auto w-[95%] sm:w-[80%]"
  data-scrolled="false"
>
  <h1
    id="navbar-title"
    class="text-xl sm:text-3xl md:text-4xl lg:text-5xl poppins-semibold transition-all duration-500"
  >
    <span id="name1" class="text-[#123472] m-0 p-0">Adag</span><span
      id="name2"
      class="text-[#ff0040] m-0 p-0">IO</span>
  </h1>
  <a
    id="contacto"
    class="text-white bg-black px-3 py-1.5 sm:px-4 sm:py-2 rounded-lg text-sm sm:text-lg md:text-xl font-semibold transition-colors duration-500 whitespace-nowrap cursor-pointer hover:bg-gray-800"
  >
    Contacto
  </a>
</nav>

<style>
  @reference "../styles/global.css";

  /* Default State (Top) */
  nav {
    background-color: transparent;
  }

  /* Default margins */
  nav #navbar-title {
    @apply max-sm:ml-8 ml-6;
  }

  nav #contacto {
    @apply max-sm:mr-8 mr-6;
  }

  /* Scrolled State */
  nav[data-scrolled="true"] {
    @apply bg-gray-500/20 backdrop-blur-xs shadow-sm gap-2 sm:gap-3;
    /* Responsive widths for pill shape */
    @apply w-[60%] sm:w-[60%] md:w-[35%] lg:w-[30%];
  }

  /* Title adjustments */
  nav[data-scrolled="true"] #navbar-title {
    @apply max-sm:ml-8 ml-6;
  }

  /* Contact button adjustments */
  nav[data-scrolled="true"] #contacto {
    @apply max-sm:mr-8 mr-6;
  }
</style>

<script>
  const nav = document.getElementById("navbar");
  
  if (nav) {
    const updateNav = () => {
      const scrolled = window.scrollY > 10;
      // Only update if the state changes to avoid unnecessary DOM writes
      if (nav.getAttribute('data-scrolled') !== scrolled.toString()) {
        nav.setAttribute("data-scrolled", scrolled.toString());
      }
    };

    // Initial check
    updateNav();

    // Optimized scroll listener using requestAnimationFrame
    let ticking = false;
    window.addEventListener("scroll", () => {
      if (!ticking) {
        window.requestAnimationFrame(() => {
          updateNav();
          ticking = false;
        });
        ticking = true;
      }
    }, { passive: true });
  }
</script>
