<nav
  id="navbar"
  class="sticky top-2 z-[20] flex items-center h-[70px] justify-between rounded-md  bg-transparent transition-all duration-500"
>
  <h1
    id="navbar-title"
    class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl poppins-semibold transition-all duration-500"
  >
    <span id="name1" class="text-[#123472] m-0 p-0">Adag</span><span
      id="name2"
      class="text-[#ff0040] m-0 p-0">IO</span>
  </h1>
  <a
    id="contacto"
    class="text-white bg-black px-4 py-2 rounded-lg text-base sm:text-lg md:text-xl font-semibold transition-colors duration-500 whitespace-nowrap"
  >
    Contacto
  </a>
</nav>
<script>
const nav = document.getElementById("navbar") as HTMLElement;
const title = document.getElementById("navbar-title");
const contacto = document.getElementById("contacto");
nav.style.transition = "width 0.7s cubic-bezier(0.4,0,0.2,1)";
window.addEventListener('DOMContentLoaded',() =>{
  const scrolled = window.scrollY > 10;
  const atTop = window.scrollY === 0;
  console.log({ scrolled, atTop, scrollY: window.scrollY, widthClasses: nav.className });
})
window.addEventListener("scroll", () => {
  const scrolled = window.scrollY > 10;
  const atTop = window.scrollY === 0;
  console.log({ scrolled, atTop, scrollY: window.scrollY, widthClasses: nav.className });
  nav.classList.toggle("w-[80%]", atTop);

  // Remove all width classes before applying the correct one
  nav.classList.remove("w-[80%]", "max-sm:w-[80%]", "sm:w-[60%]", "md:w-[35%]", "lg:w-[30%]");
  if (atTop) {
    nav.classList.add("w-[80%]");
  } else if (scrolled) {
    if (window.innerWidth < 640) {
      nav.classList.add("max-sm:w-[80%]");
    } else if (window.innerWidth < 1024) {
      nav.classList.add("sm:w-[60%]");
    } else if (window.innerWidth < 1280) {
      nav.classList.add("md:w-[35%]");
    } else {
      nav.classList.add("lg:w-[30%]");
    }
  }
  // Always keep top-2 for sticky
  nav.classList.remove("top-5", "top-10", "max-sm:top-5");
  nav.classList.add("top-2");


  if(scrolled){
    nav.classList.add("max-sm:w:[80]","sm:w-[60%]","md");
  } else {
    nav.classList.remove("top-5");
  }
  nav.classList.toggle("bg-transparent", !scrolled);
  nav.classList.toggle("max-sm:top-5", !scrolled);
  nav.classList.toggle("backdrop-blur-xs", scrolled);
  nav.classList.toggle("bg-gray-500/20", scrolled);
  nav.classList.toggle("gap-3", scrolled);
  nav.classList.toggle("shadow-lg", scrolled);
  title.classList.toggle("ml-2", scrolled);
  contacto.classList.toggle("mr-2", scrolled);

});
</script>
