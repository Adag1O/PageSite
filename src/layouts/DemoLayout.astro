---
import "../styles/global.css";
import EndPage from "../components/SingleComponent/EndPage.astro";
import TagDemo from "../components/SingleComponent/TagDemo.astro";

// Get subdomain information from middleware
const { subdomain, isDemoSubdomain } = Astro.locals;
const pageTitle = isDemoSubdomain ? "Demo - AdagIO" : "AdagIO Demos";
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
		<title>{pageTitle}</title>
	</head>
	<body class="flex flex-col min-h-screen relative">
		<TagDemo  Color="#fff" Position="TL" />
		<slot />
		<EndPage/>
	</body>
</html>

<style>
	html{
		background-color: #f5f4f6;
	}
</style>
