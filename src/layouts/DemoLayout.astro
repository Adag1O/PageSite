---
import "../styles/global.css";

export interface Props {
  title?: string;
}

const { title = "AdagIO Demo" } = Astro.props;

// Usar dominio principal para assets cuando es subdominio
const isSubdomain = Astro.url.hostname.includes('demo');
const assetBase = isSubdomain ? 'https://adagi0.com' : '';
---
<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href={`${assetBase}/favicon.svg`} />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<!-- Forzar que los assets se carguen desde el dominio principal -->
		{isSubdomain && (
			<base href="https://adagi0.com/" />
		)}
	</head>
	<body>
		<!-- Demo tag -->
		<div style="position: fixed; top: 16px; left: 16px; z-index: 9999; background: rgba(255, 255, 255, 0.9); backdrop-filter: blur(8px); padding: 8px 12px; border-radius: 8px; box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1); border: 1px solid rgb(229 231 235);">
			<span style="font-size: 14px; font-weight: 600; color: rgb(55 65 81);">DEMO</span>
		</div>
		
		<slot />
		
		<!-- Footer -->
		<footer style="margin-top: auto; padding: 16px; background-color: rgb(17 24 39); color: white; text-align: center;">
			<p style="font-size: 14px; margin: 0;">Â© 2024 AdagIO - Demo Preview</p>
		</footer>
	</body>
</html>

<style>
	html{
		background-color: #f5f4f6;
	}
</style>
