---
import DemoLayout from '../../layouts/DemoLayout.astro';
---
<DemoLayout title="LinkTree - AdagIO">
  <main class="relative min-h-screen bg-gray-900 p-4 md:p-8 flex flex-col items-center justify-center">
    
    <!-- Background Image -->
    <div class="absolute inset-0">
      <img src="https://images.pexels.com/photos/841130/pexels-photo-841130.jpeg" 
        alt="Background" 
        class="w-full h-full object-cover brightness-50 blur-xs"
      />
      <div class="absolute inset-0 bg-gradient-to-b from-gray-900/60 to-gray-800/60"></div>
    </div>

    <!-- Content -->
    <div class="relative z-10 w-full max-w-md flex flex-col items-center">
      <!-- Profile Section -->
      <div class="text-center mb-8 bg-white/10 backdrop-blur-md rounded-3xl p-6 md:p-8 border border-white/20 shadow-lg hover:shadow-xl transition-shadow duration-300">
        <div class="w-24 h-24 mx-auto mb-4 bg-gradient-to-r from-purple-400 to-pink-400 text-white rounded-full flex items-center justify-center text-3xl md:text-4xl font-bold animate-pulse hover:animate-none transition-all duration-300">
          A
        </div>
        <h1 class="text-2xl md:text-3xl font-bold mb-2">@AdagIO</h1>
        <p class="text-gray-300 text-sm md:text-base mb-4">Digital Agency & Web Development</p>
        <div class="flex flex-wrap justify-center gap-3 text-sm md:text-base text-gray-300">
          <span>ðŸš€ Innovating</span>
          <span>ðŸ’» Creating</span>
          <span>ðŸŽ¯ Delivering</span>
        </div>
      </div>

      <!-- Links Section -->
      <div class="flex flex-col w-full gap-4">
        {[
          { icon: "", label: "Official Website", href: "https://adagi0.com", color: "bg-white/20 hover:bg-white/30 border-white/30" },
          { icon: "", label: "GitHub Projects", href: "https://github.com/Adag1O", color: "bg-gray-800/50 hover:bg-gray-700/60 border-gray-600/50" },
          { icon: "", label: "Instagram", href: "#", color: "bg-gradient-to-r from-purple-500/60 to-pink-500/60 hover:from-purple-500/80 hover:to-pink-500/80 border-purple-400/30" },
          { icon: "", label: "LinkedIn", href: "#", color: "bg-blue-600/60 hover:bg-blue-500/80 border-blue-400/30" },
          { icon: "", label: "Get In Touch", href: "mailto:contact@adagi0.com", color: "bg-emerald-600/60 hover:bg-emerald-500/80 border-emerald-400/30" }
        ].map(link => (
          <a
            href={link.href}
            target="_blank"
            class={`flex items-center justify-center gap-3 w-full px-4 py-3 rounded-xl backdrop-blur-md font-medium transition-all duration-300 transform hover:scale-105 hover:shadow-lg border ${link.color}`}
          >
            <span class="text-lg md:text-xl">{link.icon}</span>
            <span class="truncate text-sm md:text-base text-white">{link.label}</span>
            
          </a>
        ))}
      </div>

      <!-- Footer -->
      <div class="text-center mt-8 text-gray-400 text-xs md:text-sm">
